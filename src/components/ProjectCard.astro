---
interface Props {
  title: string;
  description: string;
  route: string;
  status: string;
  image: {
    url: string;
    alt: string;
  };
}
import Image from 'astro/components/Image.astro';

const { route, title, description, image, status } = Astro.props as Props;
---

<li class='flex flex-col gap-4 border rounded-lg card z-10'>
  <div class='relative group overflow-hidden z-10 rounded-t-lg'>
    <Image
      src={image.url}
      alt={image.alt}
      width={400}
      height={400}
      class='object-cover aspect-square transition duration-500'
    />
    <div
      class='inline-flex items-center rounded-lg px-2 py-1 text-sm font-medium mb-4 absolute left-4 top-4'
    >
      <span class='relative flex h-2 w-2 mr-2'>
        <span
          class={`absolute inline-flex h-full w-full animate-ping rounded-full ${status === 'ongoing' ? 'bg-yellow-400' : 'bg-green-400'} opacity-75`}
        ></span>
        <span
          class={`relative inline-flex h-2 w-2 rounded-full ${status === 'ongoing' ? 'bg-yellow-400' : 'bg-green-400'}`}
        ></span>
      </span>
    </div>
  </div>
  <div class='flex flex-col gap-2 px-4 py-2'>
    <h2 class='font-bold text-lg'>
      {title}
    </h2>
    <!-- <p class='text-muted-foreground'>
      {description}
    </p> -->
    <a href={`/projects/${route}`} class='rounded-full bg-border px-2 py-1 text-sm w-fit'>details</a>
  </div>
</li>
