---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Container from '../components/Container.astro';
import { getCollection } from 'astro:content';
import ContactForm from '../components/ContactForm.astro';
import React from '../components/icons/React.astro';
import Typescript from '../components/icons/Typescript.astro';
import Tailwind from '../components/icons/Tailwind.astro';
import Nextjs from '../components/icons/Nextjs.astro';
import Nodejs from '../components/icons/Nodejs.astro';
import MongoDB from '../components/icons/MongoDB.astro';
import Postgres from '../components/icons/Postgres.astro';
import AstroIcon from '../components/icons/AstroIcon.astro';
import Prisma from '../components/icons/Prisma.astro';
import Sass from '../components/icons/Sass.astro';
import X from '../components/icons/X.astro';
import Github from '../components/icons/Github.astro';
import Instagram from '../components/icons/Instagram.astro';
import Linkedin from '../components/icons/Linkedin.astro';

const projects = await getCollection('projects');
const title = 'Taqib - Frontend developer';
---

<Layout pageTitle={title}>
  <Container>
    <section
      class='py-20 lg:py-36 text-center flex items-center flex-col justify-center'
    >
      <div
        class='inline-flex items-center rounded-lg border px-3 py-1 text-sm font-medium mb-4 bg-background'
      >
        <span class='relative flex h-2 w-2 mr-2'>
          <span
            class='absolute inline-flex h-full w-full animate-ping rounded-full bg-gradient-to-br from-blue-700 to-fuchsia-600 opacity-75'
          ></span>
          <span
            class='relative inline-flex h-2 w-2 rounded-full bg-gradient-to-br from-fuchsia-700 to-blue-500'
          ></span>
        </span>
        <span class=''>Hi there, I&apos;m Taqib</span>
      </div>
      <h1 class='max-w-4xl text-4xl font-bold md:text-5xl lg:text-6xl'>
        A
        <span
          class='text-transparent bg-clip-text bg-gradient-to-r from-blue-700 to-fuchsia-600'
        >
          Frontend
        </span>{' '}
        web developer crafting modern web applications.
      </h1>
      <p class='mt-5 max-w-prose text-muted-foreground sm:text-lg'>
        I&apos;m passionate about building accessible, beautiful, and modern web
        experiences using Next.js, React, and Tailwind CSS.
      </p>
    </section>
  </Container>

  <!-- about section -->
  <Container>
    <section id='about' class='relative space-y-12 py-8 md:py-12 lg:py-24'>
      <div class='mx-auto flex flex-col space-y-4'>
        <h2
          class='font-medium text-2xl leading-[1.1] sm:text-3xl md:text-4xl text-center mb-10'
        >
          About me
        </h2>
        <!--  -->
        <div class='flex items-center justify-center'>
          <div class='space-y-4 text-center max-w-prose'>
            <p
              class='max-w-prose leading-normal text-muted-foreground sm:text-lg sm:leading-7'
            >
              I'm a self-taught developer based in Abuja, Nigeria. I have a
              passion for web development and love to create web applications
              that are accessible, fast, and user-friendly.
            </p>
            <p
              class='max-w-prose leading-normal text-muted-foreground sm:text-lg sm:leading-7'
            >
              Currently, Interested in and learning about design systems and
              UI/UX fundamentals, aiming to create web experiences that are not
              only functional but also intuitive and visually appealing. I have
              keen eye for detail and a systematic approach to problem-solving,
              which I apply to every project.
            </p>
          </div>
        </div>
      </div>
    </section>
  </Container>

  <!-- projects section -->
  <Container>
    <section id='projects' class='relative space-y-12 py-8 md:py-12 lg:py-24'>
      <div class='mx-auto flex flex-col space-y-4 justify-center text-center'>
        <h2
          class='font-semibold text-2xl leading-[1.1] sm:text-3xl md:text-4xl'
        >
          Projects
        </h2>
        <p
          class='max-w-prose mx-auto  leading-normal text-muted-foreground sm:text-lg sm:leading-7'
        >
          I like to stay busy and always have a project in the works. Here are
          some of the personal, and freelance projects I&apos;ve dedicated my
          time to.
        </p>
      </div>
      <!-- project list -->
      <ul
        class='mx-auto grid justify-center gap-8 sm:grid-cols-2 md:grid-cols-3'
      >
        {
          projects.map((project) => (
            <ProjectCard
              route={project.slug}
              image={project.data.image}
              title={project.data.title}
              description={project.data.description}
              status={project.data.status}
            />
          ))
        }
      </ul>

      <div class='mx-auto text-center md:max-w-[58rem]'>
        <a href='/projects' class='underline underline-offset-4'
          >View all projects
        </a>
      </div>
    </section>
  </Container>

  <!-- technologies section -->
  <Container>
    <section id='skills'>
      <div class='py-8 md:py-12 lg:py-28 space-y-14 lg:space-y-20'>
        <div
          class='mx-auto flex max-w-[58rem] flex-col items-center justify-center gap-4 text-center'
        >
          <h2
            class='font-medium text-3xl leading-[1.1] sm:text-3xl md:text-5xl'
          >
            Stack
          </h2>
          <p
            class='max-w-[85%] leading-normal text-muted-foreground sm:text-lg sm:leading-7'
          >
            The technologies I work with most frequently
          </p>
        </div>
        <ul
          class='grid grid-cols-[repeat(auto-fill,_minmax(10rem,_1fr))] gap-10 lg:gap-y-14 max-sm:place-items-center '
        >
          <li class='flex items-center gap-2'>
            <React />
            <span>React.js</span>
          </li>
          <li class='flex items-center gap-2'>
            <Typescript />
            <span>Typescript</span>
          </li>
          <li class='flex items-center gap-2'>
            <Tailwind />
            <span>Tailwind CSS</span>
          </li>
          <li class='flex items-center gap-2'>
            <Nextjs />
            <span>Next.js</span>
          </li>
          <li class='flex items-center gap-2'>
            <MongoDB />
            <span>MongoDB</span>
          </li>
          <li class='flex items-center gap-2'>
            <Sass />
            <span>Sass</span>
          </li>
          <li class='flex items-center gap-2'>
            <Prisma />
            <span>Prisma</span>
          </li>
          <li class='flex items-center gap-2'>
            <AstroIcon />
            <span>Astro</span>
          </li>
          <li class='flex items-center gap-2'>
            <Postgres />
            <span>PostgreSQL</span>
          </li>
          <li class='flex items-center gap-2'>
            <Nodejs />
            <span>Node.js</span>
          </li>
        </ul>
      </div>
    </section>
  </Container>

  <Container>
    <section id='contact'>
      <div class='py-8 md:py-12 lg:py-24 space-y-10'>
        <div
          class='mx-auto flex max-w-[58rem] flex-col items-center justify-center gap-4 text-center'
        >
          <h2
            class='font-medium text-3xl leading-[1.1] sm:text-3xl md:text-5xl'
          >
            Get in touch
          </h2>
          <p
            class='max-w-[85%] leading-normal text-muted-foreground sm:text-lg sm:leading-7'
          >
            I'm actively seeking new opportunities to apply my skills and create
            value. Whether you have a project in mind, a job opportunity, or
            just want to connect, I'd love to hear from you.
          </p>
        </div>

        <div class='grid gap-6 lg:grid-cols-2 px-10 justify-center'>
          <div class='flex flex-col gap-8 justify-center'>
            <div>
              <h4 class='font-semibold text-lg'>
                You can contact me via email at
              </h4>
              <p
                class='w-fit relative after:absolute after:bg-foreground after:h-px after:w-1/2 after:top-auto after:bottom-0 after:left-0 after:scale-x-0 after:origin-right hover:after:scale-x-100 lg:hover:after:origin-left transition after:transition after:duration-300'
              >
                <a href='mailto:taqib.ibrahim@gmail.com' class='text-gradient'
                  >taqib.ibrahim@gmail.com</a
                >
              </p>
            </div>
            <div class="space-y-4">
              <h4 class='font-semibold text-lg'>Find me on</h4>
              <ul class='flex gap-2'>
                <li
                  class='border p-2 flex flex-col items-center gap-2 rounded-md'
                >
                  <a href='https://github.com/taqh' target="_blank">
                    <Github />
                  </a>
                </li>
                <li
                  class='border p-2 flex flex-col items-center gap-2 rounded-md'
                >
                  <a href='https://x.com/haqqer' target="_blank">
                    <X />
                  </a>
                </li>
                <li
                  class='border p-2 flex flex-col items-center gap-2 rounded-md'
                >
                  <a href='https://linkedin.com/in/taqib-ibrahim' target="_blank">
                    <Linkedin />
                  </a>
                </li>
                <li
                  class='border p-2 flex flex-col items-center gap-2 rounded-md'
                >
                  <a href='https://instagram.com' target="_blank">
                    <Instagram />
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <ContactForm />
        </div>
      </div>
    </section>
  </Container>
</Layout>
